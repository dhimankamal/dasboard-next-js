// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String
  password String
  email    String @unique
}

model UserData {
  id        String @id @default(cuid())
  userid    String @unique
  firstname String
  lastname  String
  email     String
  city      String
  number    String
}
